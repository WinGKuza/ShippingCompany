<Window x:Class="ShippingCompany.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главный экран" Height="600" Width="800" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        Background="#FFFFFF">
    <DockPanel>
        <!-- Главное меню -->
        <Menu x:Name="MainMenu" DockPanel.Dock="Top" Background="#4285F4" Foreground="White">
        </Menu>

        <!-- Основной контент -->
        <ScrollViewer DockPanel.Dock="Bottom" Margin="10">
            <StackPanel x:Name="MainContent" />
        </ScrollViewer>
    </DockPanel>
</Window>
